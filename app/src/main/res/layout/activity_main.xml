<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50dp"
        android:background="@drawable/result_text"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:gravity="right"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_below="@id/text">

        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/one"
                style="@style/Theme.CalculatorApp"
                android:text="1" />

            <Button
                android:id="@+id/two"
                style="@style/Theme.CalculatorApp"
                android:text="2" />

            <Button
                android:id="@+id/three"
                style="@style/Theme.CalculatorApp"
                android:text="3" />

            <Button
                android:id="@+id/multiplication"
                style="@style/Theme.CalculatorApp"
                android:layout_marginLeft="20sp"
                android:text="X" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/four"
                style="@style/Theme.CalculatorApp"
                android:text="4" />

            <Button
                android:id="@+id/fife"
                style="@style/Theme.CalculatorApp"
                android:text="5" />

            <Button
                android:id="@+id/six"
                style="@style/Theme.CalculatorApp"
                android:text="6" />

            <Button
                android:id="@+id/div"
                style="@style/Theme.CalculatorApp"
                android:layout_marginLeft="20sp"
                android:text="/" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/seven"
                style="@style/Theme.CalculatorApp"
                android:text="7" />

            <Button
                android:id="@+id/eight"
                style="@style/Theme.CalculatorApp"
                android:text="8" />

            <Button
                android:id="@+id/nine"
                style="@style/Theme.CalculatorApp"
                android:text="9" />

            <Button
                android:id="@+id/plus"
                style="@style/Theme.CalculatorApp"
                android:layout_marginLeft="20sp"
                android:text="+" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="1">

            <View
                style="@style/Theme.CalculatorApp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/zero"
                style="@style/Theme.CalculatorApp"
                android:text="0" />

            <View
                style="@style/Theme.CalculatorApp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/minus"
                style="@style/Theme.CalculatorApp"
                android:layout_marginLeft="20sp"
                android:text="-" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="1">

            <View
                style="@style/Theme.CalculatorApp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/equals"
                style="@style/Theme.CalculatorApp"
                android:text="=" />

            <View
                style="@style/Theme.CalculatorApp"
                android:visibility="invisible" />

            <View
                style="@style/Theme.CalculatorApp"
                android:layout_marginLeft="20sp"
                android:text="-" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>